<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ramon.headsupdominicano">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Arte"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".Entretenimiento"
            android:screenOrientation="landscape"/>
        <activity android:name=".Politica"
            android:screenOrientation="landscape"/>
        <activity android:name=".Quimica"
            android:screenOrientation="landscape"/>
        <activity android:name=".Geografia"
            android:screenOrientation="landscape"/>
        <activity android:name=".Historia"
            android:screenOrientation="landscape"/>
        <activity android:name=".Deportes"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".SplashScreens"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Questions"
            android:screenOrientation="landscape" />
    </application>

</manifest>