<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entretenimiento">

    <TextView
        android:id="@+id/correcto"
        android:layout_width="326dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textoEntre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/correcto"
        app:layout_constraintEnd_toEndOf="@+id/correcto"
        app:layout_constraintStart_toStartOf="@+id/correcto"
        app:layout_constraintTop_toTopOf="@+id/correcto" />

    <TextView
        android:id="@+id/ConteoEntretenimiento"
        android:layout_width="187dp"
        android:layout_height="65dp"
        android:layout_marginTop="52dp"
        android:text="60"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SegundosEntre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/correcto"
        app:layout_constraintEnd_toEndOf="@+id/correcto"
        app:layout_constraintStart_toStartOf="@+id/correcto"
        app:layout_constraintTop_toTopOf="@+id/correcto" />


</android.support.constraint.ConstraintLayout>